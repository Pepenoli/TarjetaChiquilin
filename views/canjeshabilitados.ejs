<%- include("partials/header"); -%>
<div class="table-responsive">
  <h2 style="text-align: center;">Canjes pendientes de validacion</h2>
  <h2><%=nombreCliente%></h2>
  <br><br>
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>Fecha</th>
              <th>Producto</th>
              <th>#Canje</th>
              <th>Codigo de validacion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% docs.forEach(function(doc){ %>
          <form class="" action="/validar" method="post">
            <tr>
              <td><%=nombreCliente%></td>
              <td><%=doc.fechaCanje %></td>
              <td><%=doc.productoCanjeado %></td>
              <td><%=doc._id %></td>
              <td><input type="text" name="codValidacion" placeholder="Ingrese Codigo de Validacion" required></td>
              <td><button type="submit" name="button">Validar Canje</button></td>
            </tr>
            <input type="hidden" name="idCanje" value="<%=doc._id%>">
          </form>
            <% }) %>
          </tbody>
        </table>
      </div>



<%- include("partials/footer"); -%>
